<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andres.pf_amarillas.Fragment1"
    android:background="#fef200">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bq"
            android:hint="Busqueda"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buscar"
            android:textSize="17sp"
            android:id="@+id/bus"
            android:gravity="center"
            android:background="#000000"
            android:onClick="onButtonclicked"
            android:textStyle="bold"
            android:textColor="#FAFAFA" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Resultado Busqueda:"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/f1_name"
            android:textStyle="italic"
            android:hint="Nombre"
            android:textSize="18dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f1_tele"
            android:textColor="#000000"
            android:textStyle="italic"
            android:hint="Telefono"
            android:textSize="18dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f1_celu"
            android:textStyle="italic"
            android:textColor="#000000"
            android:hint="Celular"
            android:textSize="18dp"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f1_dire"
            android:textStyle="italic"
            android:hint="Direccion"
            android:textColor="#000000"
            android:textSize="18dp"
            android:gravity="center"/>

    </LinearLayout>

</FrameLayout>
