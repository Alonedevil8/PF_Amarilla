<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andres.pf_amarillas.Fragment2"
    android:background="#fef200">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Busqueda Por Categorias"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:background="#000000"
                    android:textSize="21dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageButton_tienda"
                    android:tag="Tienda"
                    android:src="@drawable/comercio"
                    android:background="#fef200"
                    android:contentDescription="Tiendas"
                    android:layout_gravity="top"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageButton_hotel"
                    android:src="@drawable/hotel"
                    android:background="#fef200"
                    android:layout_gravity="center"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageButton_music"
                    android:src="@drawable/disco"
                    android:background="#fef200"
                    android:layout_gravity="bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageButton_hospi"
                    android:src="@drawable/medico"
                    android:background="#fef200"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageButton_resta"
                    android:src="@drawable/comida"
                    android:background="#fef200"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageButton_otro"
                    android:src="@drawable/otros"
                    android:background="#fef200"/>

            </LinearLayout>

                <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView"/>

        </LinearLayout>



</FrameLayout>
